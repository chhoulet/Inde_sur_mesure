{% extends '::baseAdmin.html.twig' %}

	{% block title %}Gestion des Photos{% endblock %}

	{% block body %}


		<div class='row'>
			<h2>Gestion des Photos</h2>
		</div>

		<div class="container">
			<div class="row">

				<div class="col-md-12">
			        <div class="panel panel-success">
			            <div class="panel-heading">
			                <h3 class="panel-title">Ajout d'une image</h3>
			            </div>
			            <div class="panel-body">
			            	<div style="text-align:center;">
			            		<a href="#" class="btn btn-lg btn-success" 
									   data-toggle="modal" 
									   data-target="#basicModal">Accédez au formulaire</a>
							</div>
			               
			                <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
							    <div class="modal-dialog">
							        <div class="modal-content">
							            <div class="modal-header">
							            	<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Fermer</button>
							            	<h4 class="modal-title" id="myModalLabel">Selectionnez vos photos</h4>
							            </div>
							            <div class="modal-body" style="text-align:left;">
							                
							                 {{ form_start(form)}}
							                 {{ form_row(form.filename)}}<br>
							                 {{ form_row(form.filename1)}}<br>
							                 {{ form_row(form.filename2)}}<br>
							                 {{ form_row(form.thematic)}}<br>
							                 {{ form_row(form.trip)}}<br>
							                 
							            </div>
							            <div class="modal-footer" style="text-align:center;">							                
							                {{ form_end(form)}}
							        	</div>
							    	</div>
							  	</div>
							</div>
			            </div>
			        </div>		        
			    </div>

		    </div>
		

		<hr/>

			<div class="col-md-12">
                <h2>Liste des Photos</h2>
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>                                       
                                <th>Photo principale</th>
                                <th>Photo secondaire</th>
                                <th>Photo tertiaire</th>
                                <th>Thématique</th>
                                <th>Voyage</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for image in listImages %}
                                <tr>                                       
                                    <td><img src="{{ asset('bundles/framework/images/' ~ image.filename)  }}" style="height:55px;width:65px;" alt="Pas de photo"></td>
                                    <td><img src="{{ asset('bundles/framework/images/' ~ image.filename1) }}" style="height:55px;width:65px;" alt="Pas de photo"></td>
                                    <td><img src="{{ asset('bundles/framework/images/' ~ image.filename2) }}" style="height:55px;width:65px;" alt="Pas de photo"></td>                                   
                                   	<td>
                                   		{% if image.thematic is not null %}
                                   			<strong>{{ image.thematic.name|capitalize }}</strong>
                                    	{% endif %}
                                   	</td>                                    
                                   	<td>
	                                   	{% if image.trip is not null %}
	                                        <strong>{{ image.trip.title|capitalize }}</strong>                                  
	                                    {% endif %}
	                                </td> 
                                </tr>
                            {% endfor %}                                   
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
               

    {% endblock %}