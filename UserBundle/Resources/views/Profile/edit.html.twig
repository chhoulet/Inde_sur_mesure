{% extends "::base.html.twig" %}

	{% block title %}Mon profil {% endblock %}

	{% block name %}
            <div class="brand">Bienvenue {{ app.user.firstname|capitalize ~' '~ app.user.name|capitalize }}</div>
            <div class="address-bar"></div>
    {% endblock %}

    
    {% block thematic %}
    {% endblock %}

    {% block body %}

        <div class="container">                    

            <div class="row">
                <div class="box">
                    <div class="col-lg-12">
                        <hr>
                        <h2 class="intro-text text-center">
                            <strong>Editer mon profil</strong>
                        </h2>
                        <hr>                                                
                        <hr class="visible-xs">
                            <div style="text-align:center;">

                                {% block fos_user_content %}
                                    {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
                                        {{ form_widget(form.name) }}<br>
                                        {{ form_widget(form.firstname) }}<br>
                                        {{ form_widget(form.adress) }}<br>
                                        {{ form_widget(form.postcode) }}<br>
                                        {{ form_widget(form.city) }}<br>
                                        {{ form_widget(form.phoneNumber) }}<br>
                                        {{ form_widget(form.email) }}<br>
                                        {{ form_widget(form.Valider) }}<br>
                                    {{ form_end(form) }}<br>
                                {% endblock fos_user_content %}

                            </div>
                               
                    </div>
                </div>
            </div>

        </div>

    {% endblock %}