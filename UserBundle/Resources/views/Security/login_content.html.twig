{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="col-md-12" style="height:90px;background-color: rgb(130,177,201);margin-bottom:25px;">
    	<h2 style="margin-top:25px;margin-bottom:25px;text-align:center;">Connectez-vous</h2>
    </div>

    <div style="margin-top:25px;">
    	<label for="username" style="font-size: 20px;"><span class="glyphicon glyphicon-user"> Nom d'utilisateur</span></label><br>
    	<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/><br>
    </div>


    <div style="margin-top:25px;">
    	<label for="password"  style="font-size: 20px;"><span class="glyphicon glyphicon-ok-sign"> Mot de passe</span></label><br>
    	<input type="password" id="password" name="_password" required="required" class="form-control"/><br>
    </div>


    <div style="margin-top:25px;">
    	<label for="remember_me">Se souvenir de moi</label>
    	<input type="checkbox" id="remember_me" name="_remember_me" value="on" style="margin-left:25px;"/>
    </div>


    <div style="margin-top:25px;margin-bottom:25px;text-align:center;">
    	<input type="submit" id="_submit" name="_submit" value="Connection" class="btn btn-warning" />
    </div>

</form>


