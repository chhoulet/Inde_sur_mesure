{% extends '::base.html.twig'  %}

	{% block title %}{{ oneThematic.name|upper }}{% endblock %}

	{% block body %}

		<div class="container">

	        <div class="row">
	            <div class="box">
	                <div class="col-lg-12">
	                    <hr>
	                    <h2 class="intro-text text-center">
	                        <strong>{{ oneThematic.name|upper }}</strong>
	                    </h2>
	                    <hr>
	                </div>
	                <div class="col-lg-12 text-center">
		                {% for imag in oneThematic.image %}
		                    <img class="img-responsive img-border img-full" src="{{ asset('bundles/framework/images/' ~ imag.filename) }}" alt="">
		                {% endfor %}
	                    <h2>{{ oneThematic.underline|capitalize }}
	                        <br>
	                        <small></small>
	                    </h2>
	                    <p>{{ oneThematic.main1|capitalize }}</p>	                    
	                    <hr>
	                </div>

	                {% if(oneThematic.underline1 is not null and oneThematic.main1 is not null) %}
		                <div class="col-lg-12 text-center" style="text-align:justify;">
			                {% for imag in oneThematic.image %}
			                    <img class="img-responsive img-border img-full" src="{{ asset('bundles/framework/images/' ~ imag.filename1) }}" alt="">
			                {% endfor %}
		                    <h2>{{ oneThematic.underline1|capitalize }}
		                        <br>
		                        <small></small>
		                    </h2>
		                    <p>{{ oneThematic.main1|capitalize }}</p>		                    
		                    <hr>
		                </div>
		            {% endif %}
		            {% if(oneThematic.underline2 is not null and oneThematic.main2 is not null) %}
		                <div class="col-lg-12 text-center" style="text-align:justify;">
		                	{% for imag in oneThematic.image %}
		                    	<img class="img-responsive img-border img-full" src="{{ asset('bundles/framework/images/' ~ imag.filename2) }}" alt="">
		                    {% endfor %}
		                    <h2>{{ oneThematic.underline2|capitalize }}
		                        <br>
		                        <small></small>
		                    </h2>
		                    <p>{{ oneThematic.main2|capitalize }}</p>		                    
		                    <hr>
		                </div>
		            {% endif %}	                
	            </div>
	        </div>
	           

	        {% if listTripsForThisThematic is not null %}
		        	<div class="row">
		            	
        				{% for tri in listTripsForThisThematic  %}
					        <div class="col-md-6 text-center">
						        <div class="row">
						        	{% if tri.brochure is not null %}
						        		<a href="{{ asset('bundles/framework/brochures/' ~ tri.brochure) }}" target="_blank" title="Voir le pdf">
						        	{% else %}
						        		<a href="{{ path('front_office_trip_oneTrip',{id:tri.id}) }}">
						        	{% endif %}

						        	<div class="box" style="height:250px;width:570px;">
							            {% for img in tri.image %}
					                    	<img class="img-responsive img-border img-left" src="{{ asset('bundles/framework/images/' ~ img.filename) }}"  alt="" style="height:165px;width:220px;">
					                    {% endfor %}
					                   
					                    <h4>
					                        <br>{{ tri.title|upper }}<br>
					                        <small>{{ tri.period }}</small>
					                    </h4>			                   	                   
					                    <hr>
					                </div></a>
					            </div>
					        </div>
					    {% endfor %}
				       
					</div>
			{% endif %}

	    </div>
    <!-- /.container -->

	{% endblock %}