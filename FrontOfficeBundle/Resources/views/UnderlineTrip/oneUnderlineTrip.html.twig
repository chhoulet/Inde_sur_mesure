{% extends '::base.html.twig' %}

	{% block title %}DÃ©tail : {{ trip.title|capitalize}} {% endblock %}

	{% block body %}

		<div class="container">
			<div class="row">
	            <div class="box">
	                <div class="col-lg-12">
	                    <hr>
	                    <h2 class="intro-text text-center">
	                        <strong>{{ trip.title|upper}}</strong>
	                    </h2>
	                    <hr>
	                </div>

	                {% for underline in listUnderlineTrips %}
		                <div class="col-lg-12 text-center">
		                	{% if underline.photo is not null %}
		                    	<img class="img-responsive img-border img-full" src="{{ asset('bundles/framework/images/' ~ underline.photo) }}" alt="">
		                    {% endif %}
		                    <h2>{{ underline.undertitle|title}}
		                        <br>		                        
		                    </h2>
		                    <p>{{ underline.main|capitalize }}</p>		                    
		                    <hr>
		                </div>	                
		            {% endfor %}

		            {% if trip.public == true %}
		            	<div class="col-lg-12" style="text-align:center;margin-top:35px;margin-bottom: 35px;">
		            		<a href="{{ path('front_office_trip_price_show',{id:trip.id}) }}"><button class="btn btn-success btn-lg">Voir les tarifs</button></a>	                    
	                	</div>
	                {% endif %}	                
	            </div>
        	</div>
    	</div>
    <!-- /.container -->

	{% endblock %}